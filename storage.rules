// storage.rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Allow each user to manage their own profilePics folder
    match /profilePics/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // (Optional) other user-scoped folders
    match /users/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    match /uploads/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
